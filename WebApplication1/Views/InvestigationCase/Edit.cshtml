@model WebApplication1.Models.InvestigationCase

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Case</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-antiforgery="true" enctype="multipart/form-data">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="InvestigationId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LineOfBusinessId" class="control-label"></label>
                    <select asp-for="LineOfBusinessId" class="form-control" asp-items="ViewBag.LineOfBusinessId">
                        <option>--- SELECT CASE TYPE ---</option>
                    </select>
                    <span asp-validation-for="LineOfBusinessId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InvestigationCaseStatusId" class="control-label"></label>
                    <select asp-for="InvestigationCaseStatusId" class="form-control" asp-items="ViewBag.InvestigationCaseStatusId">
                        <option>--- SELECT CASE STATUS ---</option>
                    </select>
                    <span asp-validation-for="InvestigationCaseStatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Created" class="control-label"></label>
                    <input asp-for="Created" class="form-control" />
                    <span asp-validation-for="Created" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-window-close"></i> Cancel</a> &nbsp;
                <button type="submit" class="btn btn-warning"> <i class="fas fa-pen"></i> Edit</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
