@model IEnumerable<WebApplication1.Models.RiskCaseStatus>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i> Create Case status</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
                <td>
                    <a class="btn btn-xs btn-info" asp-action="Details" asp-route-id="@item.RiskCaseStatusId"><i
                            class="fa fa-search"></i> View</a> &nbsp;
                    <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-id="@item.RiskCaseStatusId"><i
                            class="fas fa-pen"></i> Edit</a> &nbsp;
                    <a class="btn btn-xs btn-danger" asp-action="Delete" asp-route-id="@item.RiskCaseStatusId"><i
                            class="fas fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
