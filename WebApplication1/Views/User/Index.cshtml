@using WebApplication1.Models.ViewModel;
@model List<UsersViewModel>
@{
    //Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}

    <div>
    <h1>Manage user</h1>

    <p>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            @{
                                if (user.Roles.Contains(AppRoles.PortalAdmin.ToString()))
                                {
                                    <span class="badge badge-danger">PA</span>
                                }
                                else if (user.Roles.Contains(AppRoles.ClientAdmin.ToString()))
                                {
                                    <span class="badge badge-danger">CA</span>
                                }
                                else if (user.Roles.Contains(AppRoles.VendorAdmin.ToString()))
                                {
                                    <span class="badge badge-warning">VA</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">ST</span>
                                }

                            }
                        </td>
                        <td>
                        <a class="btn btn-success" asp-area="" asp-controller="User" asp-action="Edit" asp-route-userId="@user.UserId">Manage User</a>
                        <a class="btn btn-danger" asp-area="" asp-controller="UserRoles" asp-action="Index" asp-route-userId="@user.UserId">Manage Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
