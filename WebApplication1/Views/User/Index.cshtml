@using WebApplication1.Models.ViewModel;
@model List<UsersViewModel>
@{
    //Layout = "~/Pages/Shared/AdminLTE/_Layout.cshtml";
}

<div>
    <h1>Manage user</h1>

    <p>
    <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i> Create user</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Profile photo</th>
                <th>Email</th>
                <th>Name</th>
                <th>Roles</th>
                <th>Role Type</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @{
                            var img = user.ProfileImage;
                            if(string.IsNullOrWhiteSpace(img))
                            {
                                img = "/img/user.jpg";
                            }
                        }
                        <img src="@img" height="30" alt="No image" />
                    </td>
                    <td>@user.Email</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>
                        @foreach (var role in user.Roles)
                        {
                            <span class="badge badge-info">@role</span>
                        }
                    </td>
                    <td>
                        @{
                            if (user.Roles.Contains(AppRoles.PortalAdmin.ToString()))
                            {
                                <span class="badge badge-danger">PA</span>
                            }
                            else if (user.Roles.Contains(AppRoles.ClientAdmin.ToString()))
                            {
                                <span class="badge badge-danger">CA</span>
                            }
                            else if (user.Roles.Contains(AppRoles.VendorAdmin.ToString()))
                            {
                                <span class="badge badge-warning">VA</span>
                            }
                            else
                            {
                                <span class="badge badge-success">ST</span>
                            }

                        }
                    </td>
                    <td>
                        <a class="btn btn-xs btn-warning" asp-action="Edit" asp-route-userId="@user.UserId"> <i class="fas fa-pen"></i> User </a>&nbsp;
                        <a class="btn btn-xs btn-danger" asp-controller="UserRoles" asp-action="Index" asp-route-userId="@user.UserId"><i class="fas fa-pen"></i> Role</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
